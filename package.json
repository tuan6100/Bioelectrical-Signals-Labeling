{
  "name": "biosignal-tool",
  "productName": "Biosignal Labeling",
  "homepage": "",
  "version": "1.1.0-alpha.0",
  "author": "iBME lab, HUST",
  "description": "My Electron application description",
  "main": "src/main/app/main.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuan6100/Bioelectrical-Signals-Labeling.git"
  },
  "scripts": {
    "dev:app": "concurrently -k \"pnpm:dev:web\" \"cross-env NODE_ENV=dev electron .\"",
    "dev:web": "vite --host",
    "build:win": "pnpm run build:web && electron-builder --win --x64",
    "build:mac": "pnpm run build:web && electron-builder --mac",
    "build:linux": "pnpm run build:web && electron-builder --linux",
    "build:web": "vite build",
    "publish": "pnpm run build:web && electron-builder --publish onTag",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [
    "electron",
    "react",
    "vite"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "better-sqlite3": "^12.4.1",
    "crc-32": "^1.2.2",
    "electron-updater": "^6.6.2",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "react-select": "^5.10.2",
    "scheduler": "^0.27.0"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "vite": "^5.4.21",
    "wait-on": "^7.0.1",
    "cross-env": "^7.0.3",
    "mocha": "^11.7.5",
    "chai": "^6.2.1",
    "sinon": "^21.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller",
      "better-sqlite3"
    ]
  },
  "build": {
    "appId": "vn.edu.hust.ibme.biosignal",
    "productName": "Biosignal Labeling",
    "artifactName": "biosignal-labeling-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "asar": true,
    "files": [
      "dist/**/*",
      "src/main/app/**/*",
      "!*.map",
      "!package.json",
      "!package-lock.json",
      "node_modules/**/*",
      "!node_modules/**react**/**/*",
      "!node_modules/**vite**/**/*",
      "!node_modules/**babel**/**/*",
      "!node_modules/@emotion/**/*",
      "!node_modules/@fortawesome**/**/*",
      "!node_modules/scheduler/**/*",
      "!node_modules/sinon**/**/*",
      "!node_modules/mocha**/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraMetadata": {
      "version": "1.1.0-alpha"
    },
    "win": {
      "icon": "public/favicon/biosignal.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon/biosignal.ico",
      "uninstallerIcon": "public/favicon/biosignal.ico",
      "artifactName": "biosignal-labeling-setup-${version}-win-${arch}-setup.exe",
      "deleteAppDataOnUninstall": true,
      "perMachine": false,
      "runAfterFinish": true
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip"
      ],
      "icon": "public/favicon/biosignal.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "tuan",
        "repo": "Bioelectrical-Signals-Labeling"
      }
    ]
  }
}